{
    "global": {
        "uploadPath": {
            "windows": "upload",
            "mac": "upload",
            "linux": "upload"
        },
        "updateForm": "yyyyMMdd",
        "tokenPath": {
            "windows": "token.json",
            "mac": "token.json",
            "linux": "token.json"
        },
        "allowRegister": true,
        "allowLogin": true,
        "loadParticle": false,
        "anonymousUser": {
            "visible": true,
            "downloadable": false
        },
        "css": [
            {
                "selector": [
                    ".content-box",
                    ".form-control"
                ],
                "style": [
                    {
                        "key": "background",
                        "value": "rgba(255,255,255,0.7)"
                    }
                ]
            },
            {
                "selector": [
                    ".btn"
                ],
                "style": [
                    {
                        "key": "opacity",
                        "value": 0.7
                    }
                ]
            }
        ],
        "background": {
            "useImage": true,
            "imageIndex": 0,
            "random": true,
            "imageList": [
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_1.jpg",
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_2.jpg",
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_3.jpg",
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_4.jpg",
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_5.jpg",
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_6.jpg",
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_7.jpg",
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_8.jpg",
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_9.jpg",
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_10.jpg",
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_11.jpg",
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_12.jpg",
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_13.jpg",
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_14.jpg",
                "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_15.jpg"
            ],
            "listGenerator": {
                "enable": true,
                "prefix": "https://fakedog.xyz/homedb/srcm/upload/20180123/bg_",
                "suffix": ".jpg",
                "start": 1,
                "end": 172
            }
        }
    },
    "user": {
        "pageSize": 30,
        "password": {
            "minLength": 6,
            "maxLength": 20
        },
        "emailVerify": true,
        "emailConfig": {
            "host": "mx1.hostinger.com.hk",
            "port": 587,
            "personal": "efo",
            "from": "efo-admin@fakedog.xyz",
            "key": "123456",
            "ssl": false
        },
        "usernameMatch": {
            "pattern": "^[a-zA-Z][a-zA-Z0-9]{3,15}$",
            "description": "用户名只能使用长度为4到16位的英文字母和数字，且必须以字母开始"
        },
        "defaultAuth": {
            "isDownloadable": false,
            "isUploadable": true,
            "isDeletable": false,
            "isUpdatable": false,
            "isVisible": true
        },
        "orderBy": "id desc"
    },
    "download": {
        "pageSize": 30,
        "orderBy": "id desc"
    },
    "auth": {
        "pageSize": 30,
        "orderBy": "id desc",
        "default": {
            "isDownloadable": true,
            "isUploadable": true,
            "isDeletable": true,
            "isUpdatable": true,
            "isVisible": true
        }
    },
    "file": {
        "pageSize": 30,
        "maxSize": "1024 MB",
        "tag": {
            "require": false,
            "maxLength": 5,
            "maxSize": 5
        },
        "orderBy": "id desc",
        "coverIfExists": false,
        "linkRule": {
            "custom": "/{year}/{month}/{day}/{author}/{fileName}",
            "support": [
                "{year}",
                "{month}",
                "{day}",
                "{author}",
                "{fileName}",
                "{date}",
                "{categoryName}",
                "{fileId}"
            ]
        },
        "suffixMatch": {
            "pattern": "[a-zA-Z0-9]{0,10}",
            "description": "文件后缀只能包括数字和字母且长度不超过10"
        },
        "defaultAuth": {
            "isDownloadable": true,
            "isUploadable": true,
            "isDeletable": true,
            "isUpdatable": true,
            "isVisible": true
        }
    }
}