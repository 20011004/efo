                "{year}",
                "{month}",
                "{day}",
                "{author}",
                "{fileName}",
                "{date}",
                "{categoryName}",
                "{fileId}"
            ]
        },
        "suffixMatch": {
            "pattern": "[a-zA-Z0-9]{0,10}",
            "description": "文件后缀只能包括数字和字母且长度不超过10"
        },
        "defaultAuth": {
